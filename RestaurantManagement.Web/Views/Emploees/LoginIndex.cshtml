@using RestaurantManagement.DAL.Model
@model Emploee
@{
    ViewBag.Title = "Вход как сотрудника";
}

@using (Html.BeginForm("Login", "Emploees"))
{
    <div class="container-fluid">
        <div class="col-md-8">
            <h3>@ViewBag.Title</h3>
            <div class="form-group">
                <label class="col-form-label">
                    Ваш логин / email
                </label>
                @Html.TextBox("login",null ,htmlAttributes:new { @class = "form-control",@placeholder="example@gmail.com" })
                <label class="col-form-label">
                    Пароль
                </label>
                @Html.TextBox("password", null, new { @class = "form-control", @type = "password",@placeholder="passwordexample" })
            </div>
            <div class="form-group">
                <button class="btn btn-outline-success" type="submit">
                    Войти
                </button>
            </div>
        </div>
    </div>
}
