@model RestaurantManagement.DAL.Model.Item
@{
    ViewBag.Title = "Index";
    int state = ViewBag.state;
    string message = ViewBag.message;
}

@Html.ValidationSummary()
@if (state == 0)
{
    <div class="alert alert-success alert-dismissible fade show">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        @message
    </div>
}
else if(state==1)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        @message
    </div>
}
@using (Html.BeginForm("SaveMenu", "RestaurantMenu"))
{
    <div class="container-fluid">
        
        <div class="col-md-8">
            <h3>Добавление меню</h3>
            <div class="form-group">
                <label class="col-form-label">
                    Наименование
                </label>
                @Html.TextBoxFor(t => Model.ItemName, new { @class = "form-control" })
                <label class="col-form-label">
                    Описание
                </label>
                @Html.TextBoxFor(t => Model.ItemDesc, new { @class = "form-control" })
                <label class="col-form-label">
                    Цена
                </label>
                @Html.TextBoxFor(t => Model.Cost, new { @class = "form-control", @type = "number" })
            </div>
            <div class="form-group">
                <button class="btn btn-outline-dark" type="submit">
                    Сохранить
                </button>
            </div>
        </div>
    </div>
}

