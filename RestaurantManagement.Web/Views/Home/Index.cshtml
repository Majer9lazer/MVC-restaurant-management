@using System.Web.UI.WebControls
@{
    string message = "";
    try
    {
        message = ViewBag.Message;
    }
    catch (Exception e)
    {
        message = e.ToString();
    }

}

<div class="jumbotron">
    <h1>Here will be all information</h1>
    @if (!string.IsNullOrEmpty(message))
    {
        <p>@message</p>
    }
    else
    {
        <p>Продолжайте пользоваться сервисом</p>
    }

</div>

